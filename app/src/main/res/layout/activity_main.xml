<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context=".MainActivity"
      android:orientation="vertical"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        >
      <TextView
          android:textStyle="bold"
          android:textColor="@android:color/black"
          android:textSize="20sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="IP："
          />
      <EditText
          android:id="@+id/etIp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="请输入要连接的IP地址"
          android:textStyle="bold"
          android:textColor="@android:color/black"
          android:textSize="20sp"
          tools:text="192.168.31.79"
          />

    </LinearLayout>

    <Button
        android:id="@+id/btnConnect"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="连接"
        />

    <Button
        android:id="@+id/btnWakeUP"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="1.唤醒"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@android:color/darker_gray"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
          <TextView
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="角度："
              />
          <EditText
              android:id="@+id/etWakeUPAngle"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:hint="转动角度（相对）"
              />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            >
          <TextView
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="速度："
              />
          <EditText
              android:id="@+id/etWakeUPTurnSpeed"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:hint="转动速度"
              />
        </LinearLayout>

      </LinearLayout>
      <LinearLayout
          android:gravity="center_vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
        <RadioGroup
            android:id="@+id/rgWakeUp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            >
          <RadioButton
              android:id="@+id/rbWakeUpLeft"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="左转"
              />
          <RadioButton
              android:id="@+id/rbWakeUpRight"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:gravity="center"
              android:layout_height="wrap_content"
              android:text="右转"
              />
        </RadioGroup>

        <Button
            android:id="@+id/btnWakeUPSave"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="保存设置"
            />
      </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnFaceFollow"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="2.人脸跟随触发按钮"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@android:color/darker_gray"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@android:color/black"
          android:textSize="15sp"
          android:text="第一次转动"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            >
          <TextView
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="角度："
              />
          <EditText
              android:id="@+id/etFaceFollowAngle"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:inputType="number"
              android:hint="转动角度（相对）"
              />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            >
          <TextView
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="速度："
              />

          <EditText
              android:id="@+id/etFaceFollowSpeed"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:inputType="number"
              android:hint="转动速度"
              />
        </LinearLayout>
      </LinearLayout>
      <LinearLayout
          android:gravity="center_vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
        <RadioGroup
            android:id="@+id/rgFaceFollow"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            >
          <RadioButton
              android:id="@+id/rbFaceFollowLeft"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="左转"
              />
          <RadioButton
              android:id="@+id/rbFaceFollowRight"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:gravity="center"
              android:layout_height="wrap_content"
              android:text="右转"
              />
        </RadioGroup>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            >
          <TextView
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="间隔(ms)："
              />
          <EditText
              android:id="@+id/etFaceFollowWait"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:inputType="number"
              android:hint="间隔（毫秒）"
              />
        </LinearLayout>
      </LinearLayout>
      <TextView
          android:layout_marginTop="10dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@android:color/black"
          android:textSize="15sp"
          android:text="第二次转动"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            >
          <TextView
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="角度："
              />
          <EditText
              android:id="@+id/etFaceFollowAngleTwo"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:inputType="number"
              android:hint="转动角度（相对）"
              />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            >
          <TextView
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="速度："
              />
          <EditText
              android:id="@+id/etFaceFollowSpeedTwo"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:inputType="number"
              android:hint="转动速度"
              />
        </LinearLayout>
      </LinearLayout>
      <LinearLayout
          android:gravity="center_vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
        <RadioGroup
            android:id="@+id/rgFaceFollowTwo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            >
          <RadioButton
              android:id="@+id/rbFaceFollowLeftTwo"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="左转"
              />
          <RadioButton
              android:id="@+id/rbFaceFollowRightTwo"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:gravity="center"
              android:layout_height="wrap_content"
              android:text="右转"
              />
        </RadioGroup>

        <Button
            android:id="@+id/btnFaceFollowSave"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="保存设置"
            />
      </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnSelf"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="3.介绍自己"
        />


    <Button
        android:id="@+id/btnRelaxTurn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="4.随便转动"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@android:color/darker_gray"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@android:color/black"
          android:textSize="15sp"
          android:text="第一次转动"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            >
          <TextView
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="角度："
              />
          <EditText
              android:id="@+id/etTurnRelaxAngle"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:inputType="number"
              android:hint="转动角度（相对）"
              />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            >
          <TextView
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="速度："
              />
          <EditText
              android:id="@+id/etTurnRelaxSpeed"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:inputType="number"
              android:hint="转动速度"
              />
        </LinearLayout>
      </LinearLayout>
      <LinearLayout
          android:gravity="center_vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
        <RadioGroup
            android:id="@+id/rgRelaxTurn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            >
          <RadioButton
              android:id="@+id/rbRelaxTurnLeft"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="左转"
              />
          <RadioButton
              android:id="@+id/rbRelaxTurnRight"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:gravity="center"
              android:layout_height="wrap_content"
              android:text="右转"
              />
        </RadioGroup>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            >
          <TextView
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="间隔(ms)："
              />
          <EditText
              android:id="@+id/etTurnRelaxWait"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:inputType="number"
              android:hint="间隔（毫秒）"
              />
        </LinearLayout>
      </LinearLayout>
      <TextView
          android:layout_marginTop="10dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@android:color/black"
          android:textSize="15sp"
          android:text="第二次转动"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            >
          <TextView
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="角度："
              />
          <EditText
              android:id="@+id/etTurnRelaxAngleTwo"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:inputType="number"
              android:hint="转动角度（相对）"
              />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            >
          <TextView
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="速度："
              />
          <EditText
              android:id="@+id/etTurnRelaxSpeedTwo"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="15sp"
              android:inputType="number"
              android:hint="转动速度"
              />
        </LinearLayout>
      </LinearLayout>
      <LinearLayout
          android:gravity="center_vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
        <RadioGroup
            android:id="@+id/rgRelaxTurnTwo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            >
          <RadioButton
              android:id="@+id/rbRelaxTurnLeftTwo"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="左转"
              />
          <RadioButton
              android:id="@+id/rbRelaxTurnRightTwo"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:gravity="center"
              android:layout_height="wrap_content"
              android:text="右转"
              />
        </RadioGroup>

        <Button
            android:id="@+id/btnRelaxTurnSave"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="保存设置"
            />
      </LinearLayout>
    </LinearLayout>

  </LinearLayout>
</android.support.v4.widget.NestedScrollView>